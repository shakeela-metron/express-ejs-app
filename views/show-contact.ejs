<%- include('partials/header.ejs')%>
    <main class="py-5">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header card-title">
                <strong><%= title _%></strong>
              </div>           
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group row">
                      <label for="first_name" class="col-md-3 col-form-label">First Name</label>
                      <div class="col-md-9">
                        <p class="form-control-plaintext text-muted"><%= contact.first_name _%></p>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="last_name" class="col-md-3 col-form-label">Last Name</label>
                      <div class="col-md-9">
                        <p class="form-control-plaintext text-muted"><%= contact.last_name _%></p>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="email" class="col-md-3 col-form-label">Email</label>
                      <div class="col-md-9">
                        <p class="form-control-plaintext text-muted"><%= contact.email _%></p>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="phone" class="col-md-3 col-form-label">Phone</label>
                      <div class="col-md-9">
                        <p class="form-control-plaintext text-muted"><%= contact.phone _%></p>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="name" class="col-md-3 col-form-label">Address</label>
                      <div class="col-md-9">
                        <p class="form-control-plaintext text-muted"><%= contact.address.street %>, <%= contact.address.city %>-<%= contact.address.zipCode _%></p>
                      </div>
                    </div>
                    <hr>
                    <div class="form-group row mb-0">
                      <div class="col-md-9 offset-md-3">
                          <a href="/update-contact/<%= contact._id %>" class="btn btn-info">Edit</a>
                          <a href="#" class="btn btn-outline-danger" onclick="confirmDelete('<%= contact._id %>')">Delete</a>
                          <a href="/" class="btn btn-outline-secondary">Cancel</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  <script>
    function confirmDelete(contactId) {
      const isConfirmed = confirm('Are you sure you want to delete this contact?');
      if (isConfirmed) {
        window.location.href = `/delete-contact/${contactId}`;
      }
    }
  </script>
<%- include('partials/footer.ejs')%>