<%- include('partials/header.ejs')%>
    <main class="py-5">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header card-title">
                <strong><%= title _%></strong>
              </div>           
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <form action="/update-contact/<%= item._id _%>" method="post">
                      <div class="form-group row">
                        <label for="first_name" class="col-md-3 col-form-label">First Name</label>
                        <div class="col-md-9">
                          <input type="text" value="<%= item.first_name _%>" name="first_name" id="first_name" class="form-control">
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="last_name" class="col-md-3 col-form-label">Last Name</label>
                        <div class="col-md-9">
                          <input type="text" value="<%= item.last_name _%>" name="last_name" id="last_name" class="form-control">
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="email" class="col-md-3 col-form-label">Email</label>
                        <div class="col-md-9">
                          <input type="text" value="<%= item.email _%>" name="email" id="email" class="form-control">
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="phone" class="col-md-3 col-form-label">Phone</label>
                        <div class="col-md-9">
                          <input type="text" value="<%= item.phone _%>" name="phone" id="phone" class="form-control">
                        </div>
                      </div>

                      <div class="form-group row">
                        <label for="name" class="col-md-3 col-form-label">Address</label>
                        <div class="col-md-9">
                          <div class="row">
                            <div class="col-6">
                              <input type="text" value="<%= item.address.street _%>" placeholder="street" name="street" id="street" class="form-control">
                            </div>
                            <div class="col-6">
                              <input type="text" value="<%= item.address.zipCode _%>" placeholder="zip" name="zipCode" id="zipCode" class="form-control">
                            </div>
                          </div>
                          <div class="row mt-3">
                            <div class="col">
                              <input type="text" value="<%= item.address.city _%>" placeholder="city" name="city" id="city" class="form-control">
                            </div>
                          </div>
                        </div>
                      </div>
                      <hr>
                      <div class="form-group row mb-0">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="/" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
<%- include('partials/footer.ejs')%>