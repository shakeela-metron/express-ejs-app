
<%- include('partials/header.ejs')%>
    <main class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
                <div class="card-header card-title">
                  <div class="d-flex align-items-center">
                    <h2 class="mb-0"><%= title%></h2>
                    <div class="ml-auto">
                      <a href="/add-contact" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add New</a>
                    </div>
                  </div>
                </div>
              <div class="card-body">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone</th>
                      <th scope="col">Address</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% items.forEach((item, index)=>{%>
                      <tr>
                        <td><%= index+1 _%></td>
                        <td><%= item.first_name _%></td>
                        <td><%= item.last_name _%></td>
                        <td><%= item.email _%></td>
                        <td><%= item.phone _%></td>
                        <td><%= item.address.street %>, <%= item.address.city %>-<%= item.address.zipCode _%></td>
                        <td width="150">
                          <a href="/show-contact/<%= item._id _%>" class="btn btn-sm btn-circle btn-outline-info" title="Show"><i class="fa fa-eye"></i></a>
                          <a href="/update-contact/<%= item._id _%>" class="btn btn-sm btn-circle btn-outline-secondary" title="Edit"><i class="fa fa-edit"></i></a>
                          <a href="#" class="btn btn-sm btn-circle btn-outline-danger" title="Delete" onclick="confirmDelete('<%= item._id %>')"><i class="fa fa-times"></i></a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  <script>
    function confirmDelete(contactId) {
      const isConfirmed = confirm('Are you sure you want to delete this contact?');
      if (isConfirmed) {
        window.location.href = `/delete-contact/${contactId}`;
      }
    }
  </script>
<%- include('partials/footer.ejs')%>
